<UserControl x:Class="MvvmMaslovProject.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmMaslovProject.Pages"
      xmlns:vm="clr-namespace:MvvmMaslovProject.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#071C71">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="250">
            <TextBlock Text="Login"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="#1533AD"
                       Margin="0 5 5 5"/>
            <TextBox Height="35"
                     Margin="5 0 0 0"
                     TextChanged="TextBox_TextChanged"
                     FontSize="25"
                     FontWeight="Bold"
                     Foreground="#071C71"
                     HorizontalContentAlignment="Left"
                     Text="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                     Padding="15 0 15 0"
                     VerticalContentAlignment="Center"/>
            <TextBlock Text="Password"
                       FontSize="25"
                       FontWeight="Bold"
                       Foreground="#1533AD"
                       Margin="0 20 5 5"/>
            <TextBox Height="35"
                     Margin="5 0 0 0"
                     FontSize="25"
                     FontWeight="Bold"
                     TextChanged="TextBox_TextChanged"
                     Text="{Binding UserPassword, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                     Foreground="#071C71"
                     HorizontalContentAlignment="Left"
                     Padding="15 0 15 0"
                     VerticalContentAlignment="Center"/>

            <Button Height="40"
                    Margin="0 20 0 0"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Sign In"
                    Foreground="#6F83D6"
                    FontSize="25"
                    Command="{Binding SignInCommand}"/>
            <Button Height="40"
                    Margin="0 20 0 0"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="Registration"
                    Foreground="#6F83D6"
                    FontSize="25"
                    Command="{Binding GoRegisterCommand}"/>
            
        </StackPanel>
    </Grid>
</UserControl>
